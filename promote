#!/bin/bash

set -e
(node acceptance/is-promotable > /tmp/__promote_commit_sha) || (cat /tmp/__promote_commit_sha && exit 1)
sha=`cat /tmp/__promote_commit_sha`
echo "Promoting $sha"
git checkout -b release.tmp "$sha"
git push heroku release.tmp:master
git checkout master 
git branch -D release.tmp 

